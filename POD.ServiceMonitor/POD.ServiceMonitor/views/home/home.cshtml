@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<POD.ServiceMonitor.Models.HomeViewModel.HomeViewModel>>
@{
    Layout = "shared/_Layout.cshtml";
}

<div class="container">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a href="#sg" data-toggle="tab" class="nav-link active"><b>Services Glossory</b></a>
        </li>
        <li>
            <a href="#ss" data-toggle="tab" class="nav-link"><b>Server Stats</b></a>
        </li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade show active" id="sg">
            <div class="card text-black bg-light">
                <div class="card-body">
                    <div class="panel-body">
                        <table class="table table-striped table-hover table-bordered">
                            <thead class="table-success">
                            <tr>
                                <th>#</th>
                                <th>Service Name</th>
                                <th>Ip Address</th>
                                <th>Service Location / Path</th>
                                <th>Average Response Time <br />(in milliseconds)</th>
                                <th class="img">Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Id</td>
                                    <td>@obj.ServiceName</td>
                                    <td>@obj.IpAddress</td>
                                    <td>@obj.ServicePath</td>
                                    <td>@obj.ResponseTime</td>
                                    <td>
                                        <div class="img img-bg-props @obj.IconCss" data-toggle="tooltip" data-placement="right" title="@obj.StatusName"></div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="ss">
            <div class="card text-black bg-light">
                <div class="card-body">
                    <div class="panel-body">
                        <div id="myDiv"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
